{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "The name of the app to create."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "slackBearerToken": {
            "type": "securestring",
            "metadata": {
                "description": "Bearer token that is used for slack messages"
            }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Environment type (Development, Production)"
            },
            "allowedValues": [
                "Development",
                "Production"
            ]
        }
    },
    "variables": {
        "functionAppName": "[parameters('appName')]",
        "hostingPlanName": "[parameters('appName')]",
        "applicationInsightsName": "[parameters('appName')]",
        "storageAccountName": "[replace(parameters('appName'), '-', '')]",
        "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "tableStorageName": "[concat(replace(parameters('appName'), '-', ''), 'table')]",
        "tableStorageId": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('tableStorageName'))]"
    },
    "resources": [
        {
            "comments": "Table storage for metadata",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2018-07-01",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "tags": {
                "displayName": "Metadata storage"
            }
        },
        {
            "comments": "Storage for function app",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('tableStorageName')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            },
            "tags": {
                "displayName": "Storage for function app",
                "environment": "[parameters('environment')]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-04-01",
            "name": "[variables('hostingPlanName')]",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            },
            "tags": {
                "displayName": "Server for function app",
                "environment": "[parameters('environment')]"
            }
        },
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('functionAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ],
            "tags": {
                "displayName": "Function app",
                "environment": "[parameters('environment')]"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "defaultDocuments": [],
                    "phpVersion": "",
                    "use32BitWorkerProcess": false,
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('functionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "TableStorage:ConnectionString",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('tableStorageName'), ';AccountKey=', listKeys(variables('tableStorageId'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "TableStorage:QuestionTable",
                            "value": "questionaires"
                        },
                        {
                            "name": "TableStorage:AnswerTable",
                            "value": "answers"
                        },
                        {
                            "name": "TableStorage:WebHooksTable",
                            "value": "webHooks"
                        },
                        {
                            "name": "SlackClient:BearerToken",
                            "value": "[parameters('slackBearerToken')]"
                        }
                    ]
                }
            }
        },
        {
            "comments": "Application insights",
            "apiVersion": "2015-05-01",
            "name": "[variables('applicationInsightsName')]",
            "type": "Microsoft.Insights/components",
            "location": "[parameters('location')]",
            "tags": {
                "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('applicationInsightsName'))]": "Resource",
                "displayName": "Application insights",
                "environment": "[parameters('environment')]"
            },
            "properties": {
                "ApplicationId": "[variables('applicationInsightsName')]",
                "Request_Source": "IbizaWebAppExtensionCreate",
                "Application_Type": "web"
            }
        }
    ],
    "outputs": {
        "tableStorageConnection": {
            "type": "string",
            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('tableStorageName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('tableStorageName')), '2018-07-01').keys[0].value,';')]"
        }
    }
}